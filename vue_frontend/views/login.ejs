<div>
  <h2 v-if="isRegistering">Register</h2>
  <h2 v-else>Login</h2>

  <div v-if="error" class="alert alert-danger">
    <strong>Error: </strong> {{error}}
  </div>

  <form id="login" @submit.prevent="onSubmit">
    <div class="form-group">
      <label for="username">Username:</label>
      <input v-model="username" type="text" class="form-control" id="username" name="username" required>
    </div>
    <div class="form-group">
      <label for="password">Password:</label>
      <input v-model="password" type="password" class="form-control" id="password" name="password" required>
    </div>
    <button v-if="isRegistering" @click="register()" type="submit" class="btn btn-primary">Register</button>
    <button v-else @click="login()" type="submit" class="btn btn-primary">Login</button>
  </form>

  <button @click="isRegistering = !isRegistering" class="btn btn-link">
    {{ isRegistering ? 'Already have an account? Login' : 'Need an account? Register' }}
  </button>
</div>
